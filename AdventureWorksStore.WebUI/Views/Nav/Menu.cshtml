@model IEnumerable<string>
@Html.ActionLink("Home", "List", "Product", null, new { @class = "btn btn-default  btn-block btn-lg" })
@foreach (var category in Model)
{
    @Html.RouteLink(category, new { controller = "Product", action = "List", page = 1, category = category }, new { @class = "btn btn-default  btn-block btn-lg" + (category == ViewBag.Category ? " btn-primary" : "") })
}

